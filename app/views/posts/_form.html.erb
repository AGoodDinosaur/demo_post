body
  {
      margin: 0;
      padding: 0;
      background-color:#6abadeba;
      font-family: 'Arial';
  }

.center {
    display: flex;
    justify-content: center;
    gap: 10px;
    width: 382px;
        overflow: hidden;
        margin: auto;
        margin: 20 0 0 450px;
        padding: 80px;
        background: #23463f;
        border-radius: 15px ;
  }
.btn_link {
    text-decoration: none;
    border: 1px solid #000;
    background-color: green;
  }
